---
export interface NavItem { label: string; href: string }
export interface Props {
  title?: string;
  tagline?: string;
  nav?: NavItem[];
}
const {
  title = "James Eyler | Computer Engineer & Innovator",
  tagline = "Embedded systems • Hardware design • Automotive tech",
  nav = [
    { label: "About", href: "#about" },
    { label: "Education", href: "#education" },
    { label: "Projects", href: "#projects" },
  ],
} = Astro.props;
---

<header class="top-nav">
  <div class="top-nav-inner">
    <a href="/" class="brand">
      <strong>{title}</strong>
      <span class="tagline">{tagline}</span>
    </a>
    <nav class="menu">
      {nav.map((i) => <a href={i.href}>{i.label}</a>)}
    </nav>
  </div>
</header>

<style>
  .top-nav { position: sticky; top: 0; z-index: 30; background: white; border-bottom: 1px solid #e5e7eb; }
  .top-nav-inner { max-width: 1100px; margin: 0 auto; padding: .75rem 1rem; display: flex; gap: 1rem; align-items: center; justify-content: space-between; }
  .brand { text-decoration: none; color: inherit; display: grid; }
  .tagline { color:#6b7280; font-size:.9rem; }
  .menu a { text-decoration: none; color:#374151; padding:.4rem .6rem; border-radius:8px; }
  .menu a:hover { background:#f3f4f6; }
</style>
